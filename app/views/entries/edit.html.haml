%h1 Edit Entry
= form_for [@project, @entry] do |f|
  - if @entry.errors.any?
    .text_error
      %p
        Form is invalid
        %p
          %ul.text-error
            - for message in @entry.errors.full_messages
              %li.text-error= message
  %p
    = f.label :title
    = f.text_field :title, :class => "span3"
  %p
    = f.label :body
    = f.text_area :body, :rows => 9, :class => "span7"
  %p
    = f.submit "Submit", class: "btn btn-primary"
%p
  = link_to 'Back', :back, :class => "muted"
